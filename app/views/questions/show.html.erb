<% if current_user.admin == true %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @question.number %>
</p>

<p>
  <strong>Ques:</strong>
  <%= @question.ques %>
</p>

<p>
  <strong>Opta:</strong>
  <%= @question.optA %>
</p>

<p>
  <strong>Optb:</strong>
  <%= @question.optB %>
</p>

<p>
  <strong>Optc:</strong>
  <%= @question.optC %>
</p>

<p>
  <strong>Optd:</strong>
  <%= @question.optD %>
</p>

<p>
  <strong>Answer:</strong>
  <%= @question.answer %>
</p>

<p>
  <strong>Sub genre:</strong>
  <%= @question.sub_genre.subgenrename %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @question.sub_genre.genre.genrename %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<% else %>
<%= current_user.inspect %>
<p id="notice"><%= notice %></p>
<%= form_for(@question) do |f| %>
<p>
  <strong>Ques:</strong>
  <%= label_tag(@question.ques)%>
</p>


<p>
  <div class="radio-checkbox">
  <strong>Opta:</strong>
  <%=check_box_tag(:Opta, "false")%>
  <%= label_tag(:Opta_false, @question.optA) %>
  </div>
</p>

<p>
  <strong>Optb:</strong>
  <%=check_box_tag(:Optb, "false")%>
  <%= label_tag(:Optb_false, @question.optB) %>
</p>

<p>
  <strong>Optc:</strong>
  <%=check_box_tag(:Optc, "false")%>
  <%= label_tag(:Optc_false, @question.optC) %>
</p>

<p>
  <strong>Optd:</strong>
   <%=check_box_tag(:Optd, "false")%>
  <%= label_tag(:Optd_false, @question.optD) %>
</p>

<%= submit_tag("Submit") %>

<%end%>


<%= link_to 'Back', '/questions/' %>
<% end %>
