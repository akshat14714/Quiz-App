<!DOCTYPE html>
<html>
  <head>
    <title>QuizApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <% if user_signed_in? %>
        <p>Hello, <%= current_user.name %> - <%= link_to "Logout", destroy_user_session_path, :method => 'delete' %></p>
      <% else %>
        <%= link_to "Login", new_user_session_path %>
      <% end %>
      
    <%= yield %>
  </body>
</html>
